@model WorkUpdateDto
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Update Work</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="text-danger my-2" asp-validation-summary="ModelOnly"></div>
    <div class="container my-2">
        <form asp-action="Update" asp-controller="Home" method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label class="form-label">Definition</label>
                <input class="form-control" asp-for="@Model.Definition" />
            </div>
            <div class="form-group">
                <label class="form-label">Tamamlandı mı?</label>
                <input class="form-control-check" asp-for="@Model.IsCompleted" />
            </div>
            <div>
                <button class="btn btn-info" type="submit">Güncelle</button>
            </div>
        </form>
    </div>
</body>
</html>